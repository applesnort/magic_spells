<div class="container my-4">
  <div class="row">
    <div class="div">
      <a href="<%= spells_path %>" type="button" class="btn btn-outline-secondary">< Return to Spells</a>
    </div>
  </div>
</div>

<div class="container">
  <div class="row d-flex justify-content-between">
    <h2><%= @spell.name %></h2>
    <div>
      <a href="<%= edit_spell_path(@spell) %>" type="button" class="btn btn-outline-secondary btn-lg px-5">Edit</a>
    </div>
  </div>
  <div>
    <ul>
      <li><strong>Spell: </strong><%= @spell.name %></li>
      <li><strong>Type: </strong><%= @spell.kind %></li>
      <li><strong>Power Level: </strong><%= @spell.level %></li>
    </ul>
  </div>
</div>

  <% if @spell.photo.attached? %>
  <div class="row col-sm-12 col-md-6 d-flex justify-content-end">
    <%= cl_image_tag @spell.photo.key , height: 300, width: 400, crop: :fill %>
  </div>
  <% end %>
</div>

<div class="container my-4">
  <div class="row d-flex justify-content-between">
    <h3>Required Ingredients and Dosage</h3>
    <div>
      <a href="/spells/<%= @spell.id %>/doses/new" type="button" class="btn btn-primary btn-lg">+ Add Dosage</a>
    </div>
  </div>
</div>

<div class="container d-flex justify-content-center">
  <ul>
    <% @spell.doses.each do |dose| %>
      <li><%= dose.ingredient.name %> => <%= dose.instructions %></li>
    <% end %>
  </ul>
  </div>  
</div>


<div class="container">
  <h3>Side Effects</h3>
  <div class="row">
    <ul>
    <% @spell.ingredients.each do |item| %>
      <li><%= item.effect %></li>
    <% end %>
    </ul>
  </div>
</div>

