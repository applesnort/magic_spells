<%= simple_form_for @spell do |f| %>
  <%= f.input :name %>
  <%= f.input :kind %>
  <%= f.input :level %>
  <% if @spell.photo.attached? %>
  <%= cl_image_tag @spell.photo.key , height: 300, width: 400, crop: :fill %>
  <% else %>
  <%= f.input :photo, as: :file %>
  <% end %>
  <%= f.submit "Create Spell", class: "btn btn-primary" %>
<% end %>
